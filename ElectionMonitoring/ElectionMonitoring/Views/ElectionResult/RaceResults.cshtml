@{
    ViewBag.Title = "Election Results";
    Layout = "~/Views/Shared/_AlternateLayout.cshtml";
}

<div class="box-content">
    <div class="row-fluid showgrid">
        <div id="refreshnotice" class="span12">
            <center>This page refreshes automatically every minute no need to manually refresh</center>
        </div>
    </div>
    <div class="row-fluid showgrid">
        <form class="form-horizontal">
            <div class="span4">
                <div class="control-group">
                    <label class="control-label" for="regioncode"> Election Category</label>
                    <div class="controls">
                        <select id="raceType">
                            <!-- <option value="">PRESIDENTIAL</option>-->
                        </select>
                    </div>
                </div>
            </div>
            <div class="span4">
                <div class="control-group">
                    <label class="control-label" for="regioncode">State</label>
                    <div class="controls">
                        <!--<select id="regioncode" data-rel="chosen">-->
                        <select id="region" data-rel="tootltip">
                            <option value="">ALL</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="span4">
                <!-- more stuff here -->
            </div>
        </form>
    </div>
    <div class="row-fluid showgrid">
        <div class="span8 hidden-phone hidden-tablet">
            <style>
                #map-canvas {
                    position: relative;
                }

                #infobox {
                    position: absolute;
                    top: 10px;
                    left: 10px;
                    z-index: 99;
                }
            </style>
            <div id="map-canvas" style="height: 500px;"></div>
            <div id='infobox' style="display:none">This is it <br />----------<br />more info</div>
        </div>
        <div class="span4">
            <div id="result-analysis">
                <h4 id="result-analysis-header">Results for ...... elections</h4>
                <table class="table table-striped table-bordered table-condensed bootstrap-datatable " id="result-analysis-table">
                    <thead>
                        <tr>
                            <th>Candidate</th>
                            <th>Party</th>
                            <th>Total Votes</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <p id="result-analysis-comments"></p>
            </div>

        </div>
    </div>
</div>
<div class="row-fluid showgrid" id="result-charts">
    <div class="span6">
        <div id="piechart" style="height:300px"></div>
    </div>
    <div class="span6">
        <div id="columnchart" style="height:300px"></div>
    </div>

    <div id="loading" style="display: none; position: absolute; margin-top:200px; margin-left:300px">
        &nbsp;&nbsp;&nbsp;<img alt='loading...' src="~/Images/alternate/ajax-loaders/ajax-loader-6.gif" />
        Loading ...
    </div>
</div>